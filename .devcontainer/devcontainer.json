{
  "name": "Python 3.8 & Java 8",
  // 1. 设定基础镜像为 Python 3.8
  "image": "mcr.microsoft.com/devcontainers/python:3.8",

  // 2. 使用 Features 安装 Java 8
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "8",
      "installMaven": "true",
      "installGradle": "false",
      "jdkDistro": "ms" 
    }
  },

  // 3. 自动安装 VS Code 插件 (可选，但推荐)
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "vscjava.vscode-java-pack"
      ]
    }
  }
}